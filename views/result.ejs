<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta content="width=device-width, initial-scale=1" name="viewport" />
	<title><%=parseId.Title%></title>
	<link rel="stylesheet" type="text/css" href="../stylesheets/title/main.css">
</head>

<body>

	<nav>
		<a href="/" class="logo"><i class="fas fa-ticket-alt"></i> MDB</a>

		<ul>
			<%if(user){%>
			<li><a class="log" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
			<%} else {%>
			<li><a class="log" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
			<li><a class="log" href="/sign_up"><i class="fas fa-user-plus"></i> SignUp</a></li>
			<%}%>
		</ul>
	</nav>

	<div class="container">
		<div class="frame_1">
			<div class="poster">
				<img src="<%=parseId.Poster%>">
			</div>

			<div class="title-ratings">
				<div class="line_through">
					<%=parseId.Title%>
				</div>

				<div class="plot">
					<p class="plot_heaeding">Storyline</p>
					<p class="storyline"><%=parseId.Plot%></p>
				</div>

				<div class="audience_ratings">

					<div class="imdb">
						<div class="logo">
							<img src="https://upload.wikimedia.org/wikipedia/commons/6/69/IMDB_Logo_2016.svg">
						</div>
						<p class="ratings"><%=parseId.Ratings[0].Value%></p>
					</div>

					<div class="rotten_tomatoes">
						<div class="logo">
							<img src="https://upload.wikimedia.org/wikipedia/commons/6/6f/Rotten_Tomatoes_logo.svg">
						</div>
						<p class="ratings"><%=parseId.Ratings[1].Value%></p>
					</div>

					<div class="metacritic">
						<div class="logo">
							<img src="https://upload.wikimedia.org/wikipedia/commons/4/48/Metacritic_logo.svg">
						</div>
						<p class="ratings"><%=parseId.Ratings[2].Value%></p>
					</div>
				</div>

			</div>
		</div>

			<!-- Frame_2 -->
		<div class="frame_2">
			<div class="heading_BG">
				<h3 class="heading">More Info</h3>
			</div>

			<ul class="more_info">
				<li class="other_info">
					<p class="catagory">Raings:</p>
					<p class="result"><%=parseId.Rated%></p>
				</li>

				<li class="other_info">
					<p class="catagory">Genre:</p>
					<p class="result"><%=parseId.Genre%></p>
				</li>

				<li class="other_info">
					<p class="catagory">Directed By:</p>
					<p class="result"><%=parseId.Director%></p>
				</li>

				<li class="other_info">
					<p class="catagory">Written By:</p>
					<p class="result"><%=parseId.Writer%></p>
				</li>

				<li class="other_info">
					<p class="catagory">Cast:</p>
					<p class="result"><%=parseId.Actors%></p>
				</li>

				<li class="other_info">
					<p class="catagory">In Theaters:</p>
					<p class="result"><%=parseId.Released%></p>
				</li>

				<li class="other_info">
					<p class="catagory">On Disc/Streaming:</p>
					<p class="result"><%=parseId.DVD%></p>
				</li>

				<li class="other_info">
					<p class="catagory">Runtime:</p>
					<p class="result"><%=parseId.Rated%></p>
				</li>

				<li class="other_info">
					<p class="catagory">Studio:</p>
					<p class="result"><%=parseId.Production%></p>
				</li>
			</ul>
		</div>
			<!-- Comments section -->
		<div class="reviews">
			<div class="heading_BG">
				<h3 class="heading">Reviews</h3>
				<a href="/title/<%=parseId.Title.split(' ').join('_')%>/comments/new">
					Add Review
				</a>
			</div>
				<div class="user_review">
				<% for(var i=0; i < reviews.length; i++){%>
				<div class="review_window">
					<h4><i class="fas fa-user"></i> <%=reviews[i].user%></h4>
					<p><%=reviews[i].review%></p>
					<% if(user === reviews[i].user){ %>
					<hr>
					<div class="edit_delete">
						<a class = 'edit btn' href="/title/<%=parseId.Title.split(' ').join('_')%>/edit/<%=reviews[i].user%>">Edit</a>
						<a class="delete btn" href="/">Delete</a> 
					</div>
					<% } %>
				</div>
				<%}%>
			</div>
		</div>
	</div>
	<script src="https://kit.fontawesome.com/86ef774720.js" crossorigin="anonymous"></script>
</body>
</html>